<Page x:Class="Veterinar.Windows.AutorisationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Veterinar.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorisationPage">

    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация" FontSize="35" VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="4" TextAlignment="Center"   FontWeight="Black"/>
        <TextBlock Text="Логин"  Grid.Column="2" HorizontalAlignment="Center" Grid.Row="1" Grid.ColumnSpan="2" TextAlignment="Center" VerticalAlignment="Top" 
                FontSize="24" FontWeight="Black"/>
        <TextBox x:Name="loginTxb" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" Width="250" Height="50" TextAlignment="Center" FontSize="22" Padding="5"/>
        <TextBlock Text="Пароль" Grid.Column="2" HorizontalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="2" TextAlignment="Center" VerticalAlignment="Top"
                 FontSize="24" FontWeight="Black"/>
        <PasswordBox x:Name="parolTxb" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" Width="250" Height="50"  FontSize="22" Padding="5"/>
        <Button x:Name="btnVhod" Content="Войти"  Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="2" Width="200" Height="50" Click="btnVhod_Click"
             FontSize="24" FontWeight="Black"/>
    </Grid>
</Page>
